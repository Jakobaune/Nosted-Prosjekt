@model Bruker

@{
    ViewData["Title"] = "RedigerBruker";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            text-align: center;
        }

        .success-message {
            color: white;
            background-color: green;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
        }
    </style>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var melding = "@ViewData["Melding"]";

            if (melding) {
                alert(melding);
            }
        });
    </script>
</head>
<body>

    <h1>Rediger Bruker</h1>

    @if (!string.IsNullOrEmpty(ViewData["BrukerNavn"] as string))
    {
        <div class="success-message">
            Endringer for @ViewData["BrukerNavn"] lagret vellykket!
        </div>
    }

    <div class="row">
        <div class="col-md-4">
            <form asp-action="RedigerBruker">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BrukerId" />
                <div class="form-group">
                    <label asp-for="BrukerNavn" class="control-label"></label>
                    <input asp-for="BrukerNavn" class="form-control" />
                    <span asp-validation-for="BrukerNavn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Epostadresse" class="control-label"></label>
                    <input asp-for="Epostadresse" class="form-control" />
                    <span asp-validation-for="Epostadresse" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rolle" class="control-label"></label>
                    <input asp-for="Rolle" class="form-control" />
                    <span asp-validation-for="Rolle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Passord" class="control-label"></label>
                    <input asp-for="Passord" class="form-control" />
                    <span asp-validation-for="Passord" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="VisAlleBrukere">Tilbake til listen</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>
