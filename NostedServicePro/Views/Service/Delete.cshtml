@model ServiceOrdre

@{
    ViewData["Title"] = "Delete";
}
<!-- Vis melding ved vellykket sletting -->
@if (!string.IsNullOrEmpty(TempData["Message"]?.ToString()))
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
else if (!string.IsNullOrEmpty(TempData["Error"]?.ToString()))
{
    <div class="alert alert-danger" role="alert">
        @TempData["Error"]
    </div>
}


<!-- Overskrift for slettingssiden -->

<h3>Er du sikker på du vil slette denne serviceordren?</h3>
<hr/>
<h4>@Html.DisplayNameFor(model => model.OrdreID) #<em>@Html.DisplayFor(model => model.OrdreID)</em></h4>
<!-- Visning av serviceordre-detaljer -->
<div>
    <dl class="row">
        <!-- Gjennomgang av serviceordre-attributter -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kundenavn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kundenavn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kundeepost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kundeepost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kundetlf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kundetlf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produkttypevinsj)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produkttypevinsj)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ÅrsmodellVinsj)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ÅrsmodellVinsj)
