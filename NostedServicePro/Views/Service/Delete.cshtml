        </dd>
    </dl>
    <!-- Slettingsskjema -->
    <form method="post" asp-controller="Service" asp-action="Delete">
        <input type="hidden" asp-for="OrdreID"/>
        <!-- Bekreftelsescheckbox -->
        <label>
            <input type="checkbox" name="confirm" required/> Bekreft sletting
        </label>
        <!-- Slett-knapp og tilbake-knapp -->
        <input type="submit" value="Slett" class="btn btn-danger"/> |
        <a asp-action="Arkiv">Tilbake til historikk</a>
    </form>

</div>