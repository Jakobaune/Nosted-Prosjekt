@model Loginnosted.Models.SjekklisteStatusViewModel

<form asp-action="LeggTilSjekklisteElement">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @for (int i = 0; i < Model.Sjekkpunkter.Count; i++)
    {
        var sjekkpunkt = Model.Sjekkpunkter[i];
        <div class="form-group">
            <label class="control-label">@sjekkpunkt.Sjekkpunkt</label>
            <div class="btn-group" role="group">
                <label class="btn btn-secondary">
                    <input type="radio" asp-for="Sjekkpunkter[i].Status" value="OK" /> OK
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" asp-for="Sjekkpunkter[i].Status" value="Bør skiftes" /> Bør skiftes
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" asp-for="Sjekkpunkter[i].Status" value="Defekt" /> Defekt
                </label>
            </div>
            @Html.HiddenFor(model => model.Sjekkpunkter[i].Id)
            @Html.HiddenFor(model => model.Sjekkpunkter[i].Sjekkpunkt)
        </div>
    }

    <div class="form-group">
        <input type="submit" value="Legg til" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <script>
        // Ingen behov for JavaScript for denne tilnærmingen
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
