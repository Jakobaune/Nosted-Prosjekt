@{
    ViewData["Title"] = "Home Page";
}
@model Nostedansatt.Models.Ansatt

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <!-- Legg til lenke til skjemasiden -->
    <a asp-controller="Registrering" asp-action="Skjema">Gå til skjema</a>
</div>


<h2>Skjemaside</h2>

<form method="post">
    <div>
        <label asp-for="BrukerNavn">BrukerNavn:</label>
        <input asp-for="BrukerNavn" class="form-control" />
        <span asp-validation-for="BrukerNavn" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="EpostAdresse">EpostAdresse:</label>
        <input asp-for="EpostAdresse" class="form-control" />
        <span asp-validation-for="EpostAdresse" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Rolle">Rolle:</label>
        <select asp-for="Rolle" class="form-control">
            <option value="">Velg rolle</option>
            <option value="Admin">Admin</option>
            <option value="Kundebehandler">Kundebehandler</option>
            <option value="Mekaniker">Mekaniker</option>
        </select>
        <span asp-validation-for="Rolle" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Passord">Passord:</label>
        <input asp-for="Passord" type="password" class="form-control" />
        <span asp-validation-for="Passord" class="text-danger"></span>
    </div>

    <div>
        <button type="submit">Registrer</button>
    </div>
</form>
